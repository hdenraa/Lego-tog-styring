[Unit]
Description=Stream video
After=syslog.target

[Service]
Type=forking
ExecStart=/usr/bin/uv4l \
--auto-video_nr \
--driver raspicam \
--encoding h264 \
--server-option \
'--port=9000' \
--driver raspicam \
--rotation 180 \
--width 320 \
--height 240 \
--framerate 15
Restart=on-abort

[Install]
WantedBy=multi-user.target
